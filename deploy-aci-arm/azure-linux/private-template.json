{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "type": "string",
      "metadata": {
        "description": "Name of the deployment group."
      }
    },
    "ssh": {
      "type": "string",
      "metadata": {
        "description": "SSH key for access"
      }
    },
    "acr-repo": {
      "type": "string",
      "metadata": {
        "description": "Access token for ACR if necessary"
      }
    },
    "acr-token": {
      "type": "string",
      "metadata": {
        "description": "Access token for ACR if necessary"
      }
    },
    "image": {
      "type": "string",
      "metadata": {
        "description": "Image to deploy"
      }
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2022-10-01-preview",
      "name": "[parameters('name')]",
      "location": "North Europe",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "sku": "Confidential",
        "restartPolicy": "Never",
        "osType": "Linux",
        "ipAddress": {
          "ports": [
            {
              "protocol": "TCP",
              "port": "22"
            }
          ],
          "type": "Public"
        },
        "volumes": [],
        "confidentialComputeProperties": {
          "ccePolicy": ""
      },
        "imageRegistryCredentials": [
          {
            "server": "[parameters('acr-repo')]",
            "username": "00000000-0000-0000-0000-000000000000",
            "password": "[parameters('acr-token')]"
          }
        ],
        "containers": [
          {
            "name": "[format('{0}-main', parameters('name'))]",
            "properties": {
              "image": "[parameters('image')]",
              "command": [
                "/bin/sh",
                "-c",
                "mkdir -p /root/.ssh/ && gpg --import /etc/pki/rpm-gpg/MICROSOFT-RPM-GPG-KEY && tdnf update -y && tdnf install -y openssh-server systemd && echo $SSH_ADMIN_KEY >> /root/.ssh/authorized_keys && systemctl start sshd && tail -f /dev/null"
              ],
              "ports": [
                {
                  "protocol": "TCP",
                  "port": "22"
                }
              ],
              "environmentVariables": [
                {
                  "name": "SSH_ADMIN_KEY",
                  "value": "[parameters('ssh')]"
                }
              ],
              "volumeMounts": [],
              "resources": {
                "requests": {
                  "memoryInGB": 32,
                  "cpu": 16
                }
              }
            }
          }
        ]
      }
    }
  ]
}
